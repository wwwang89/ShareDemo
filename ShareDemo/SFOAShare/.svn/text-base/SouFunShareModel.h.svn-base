#import <Foundation/Foundation.h>
#import <UIKit/UIKit.h>
#import "SouFunShareContants.h"

@class SouFunShareMediaModel;


/**
 一个消息结构由三部分组成：文字、图片和多媒体数据~
 
 */
@interface SouFunShareModel : NSObject

@property (nonatomic, strong) NSString *text;

@property (nonatomic, strong) SouFunShareMediaModel *mediaModel;

@property (nonatomic, assign) SouFunShareModelType modelType; //分享的类型

@end


/**
 消息中包含的多媒体数据对象类
 多媒体数据对象，可以为video，webpage等。
 */
@interface SouFunShareMediaModel: NSObject

/** 多媒体内容标题 */
@property (nonatomic, strong) NSString *title;

/** 多媒体内容描述 */
@property (nonatomic, strong) NSString *desc;

/** 多媒体内容缩略图 */
@property (nonatomic, strong) NSData *thumbnailData;

@end


/**
 消息中包含的图片数据对象
 */
@interface SouFunShareImageModel : SouFunShareMediaModel

/**图片真实数据内容 */
@property (nonatomic, strong) NSData *imageData;

/** 图片url */
@property (nonatomic, strong) NSString  *imageUrl;

/** */
@property (nonatomic,strong) UIImage *image;

@end



/**
 *  
 */
@interface SouFunShareVideoModel: SouFunShareMediaModel

/** 视频网页的url地址 */
@property (nonatomic, strong) NSString *videoUrl;
/** 视频lowband网页的url地址 */
@property (nonatomic, strong) NSString *videoLowBandUrl;

@end

/**
 消息中包含的网页数据对象
 */
@interface SouFunShareWebPageModel : SouFunShareMediaModel
/** 网页的url地址 */
@property (nonatomic, strong) NSString *webpageUrl;

@end

